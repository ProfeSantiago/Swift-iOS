<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5.1" />
    <httpRuntime targetFramework="4.5.1"/>
  </system.web>
  
  <system.serviceModel>

    <!-- 
    ===================================================== 
    Behaviors "Normal"
    ===================================================== 
    -->
   
    <!--<behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>   
    </behaviors>-->

    <!-- 
    ===================================================== 
    Behaviors y Services "Especiales"
    ===================================================== 
    -->

    <behaviors>
      <endpointBehaviors>
        <behavior name="ComportamientoWebEnd">
          <webHttp />
        </behavior>
      </endpointBehaviors>

      <serviceBehaviors>
        <behavior name="ComportamientoDelServicio">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <services>
      <service name="IntroWCF.MiServicio"
             behaviorConfiguration="ComportamientoDelServicio">

        <endpoint address="" binding="webHttpBinding"
                  contract="IntroWCF.IMiServicio"
                  behaviorConfiguration="ComportamientoWebEnd" />
      </service>
    </services>

    <!-- ===================================================== -->
        
    <protocolMapping>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
